function makeArr(int size, int step, int start)
{
    function inner(int i, int cur, int[] res)
    {
        if i < size 
        then 
        {
            int next = cur + step;
            inner(i+1, next, res :: next);
        } 
        else 
            res;
    }
    inner(0,start, []);
}

makeArr(10,2,0);