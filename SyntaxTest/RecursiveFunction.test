function incrementBySteps(start, incrementAmount, amountOfTimes)
{
    var result = start;
    
    //function delcared inside of the other function, we use it to loop (amountOfTimes) :D
    function loop(cnt)
    {
        if cnt then 
        {
            result = result + incrementAmount;
            loop(cnt-1);
        }
    }
    loop(amountOfTimes);
    result;
}

//Starting at 0 increment by 5, and do it 10 times
var res = incrementBySteps(0, 5, 10);
res;